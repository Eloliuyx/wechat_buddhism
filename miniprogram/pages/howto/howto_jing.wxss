.container {
  padding: 20px;
  line-height: 1.8em;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
}
.subtitle {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
  color: #666;
  border: 1px solid #ccc;
  padding: 5px;
}


.chapter-item {
  display: block;
  margin-bottom: 10px;
  font-size: 32rpx;
  color: #02548b;
  text-decoration: none;
  background: none;
}
.subchapter-item {
  display: block;
  margin-bottom: 10px;
  font-size: 26rpx;
  color: #007ACC;
  text-decoration: none;
  background: none;
  box-shadow: none; /* 确保没有阴影 */
  outline: none; /* 确保没有聚焦边框 */
}


.chapter-content {
  padding-top: 20px;
}

.chapter {
  margin-bottom: 20px;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 40px;
  margin-bottom: 20px;
  color: #333;
  text-align: center;
}

.chapter-subtitle {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20px;
  margin-bottom: 10px;
  color: #333;
  text-align: center;
}

.chapter-author {
  font-size: 24rpx;
  margin-bottom: 30px;
  color: #666;
  text-align: center;
}

.chapter-text {
  color: rgb(61, 61, 61);
}

.scripture-author {
  font-size: 24rpx;
  margin-bottom: 10px;
  color: #666;
  text-align: center;
}

.paragraph {
  line-height: 1.8em;
  padding: 10px;
  color: rgb(61, 61, 61);
}

.chapter-subsubtitle {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20px;
  margin-bottom: 10px;
  color: rgb(61, 61, 61);
}
.table {
  display: flex;
  flex-direction: column;
  border: 1px solid green;
  margin: 10px;
}

.row {
  display: flex;
  flex-direction: row;
}

.header .cell {
  font-weight: bold;
  background-color: lightgreen;
  text-align: center;
}

.cell {
  flex: 1;
  border: 1px solid green;
  padding: 10px;
  text-align: center;
}
